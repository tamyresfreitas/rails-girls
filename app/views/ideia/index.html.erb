<p id="notice"><%= notice %></p>

<h1>Ideia</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Descrição</th>
      <th>Foto</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ideia.each do |ideium| %>
      <tr>
        <td><%= ideium.name %></td>
        <td><%= ideium.description %></td>
        <td><%= ideium.picture %></td>
        <td><%= link_to 'Mostrar', ideium %></td>
        <td><%= link_to 'Editar', edit_ideium_path(ideium) %></td>
        <td><%= link_to 'Apagar', ideium, method: :delete, data: { confirm: 'Você tem certeza?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nova Ideia', new_ideium_path %>
